{
	"compilerOptions": {
	  // Project options
	  "lib": ["ESNext", "DOM"], // Specifies the default set of type definitions to use
	  "outDir": "dist", // Directory to output .js files
	  "rootDir": "src", // Directory containing the source files
	  "removeComments": true, // Strips all comments from TypeScript files when converting into JavaScript
	  "target": "ES6", // Target environment for the JavaScript output
	  "baseUrl": "./src", // Base directory for resolving non-absolute module names
	  "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
	  "moduleResolution": "node", // Module resolution strategy
	  "paths": {}, // Mapping of module paths
	  "sourceMap": true, // Enables source maps for debugging
	  "sourceRoot": "/", // Location where a debugger should locate TypeScript files
	  "alwaysStrict": true, // Ensures that files are parsed in strict mode
	  "allowUnreachableCode": false, // Reports unreachable code
	  "noImplicitAny": true, // Requires explicit type annotations
	  "strictNullChecks": true // Distinguishes between null and undefined
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**/*"]
  }
  